@model PTWeb.ViewModels.InputRegister

<div class="content_section">

    <h2>Register</h2>
    <form asp-controller="Auth" asp-action="OnRegister" method="post">
        <h4>Create a new account.</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="display: flex; justify-content:space-around; flex-direction: column; width: 400px;">

            <div style="display: flex; justify-content:space-between; margin-bottom: 10px;">
                <div style="width: 180px;" >
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div style="margin-right: 10px;" >
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex;margin-bottom: 10px; justify-content:space-between; ">
                <div style="width: 180px;">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div style="margin-right: 10px;">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 180px;">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div style="display: flex; margin-bottom: 10px;justify-content:space-between;">
                <div style="width: 180px;">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="margin-right: 10px;">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button class="button_01" type="submit">Register</button>
    </form>
</div>