@model PTWeb.Models.User

<h1 style="margin-bottom:0px;">Hello </h1>
<h2><a href="/UserInfo/Index">@Model.Email</a></h2>
<div style="display: flex; justify-content: space-evenly;">
    <a href="@Url.Action("LogOut","Auth")">Logout</a>
    <a href="@Url.Action("History","UserInfo")">History</a>
    <a id="cart_url" href="@Url.Action("Index","Cart")">Cart</a>
</div>
<script>
    function updateNumberCart() {
        jQuery.ajax({
            url: "/Cart/GetCartCount",
            method: "GET",
            success: function (data) {
                jQuery("#cart_url").text(`cart (${data})`)
                //console.log(data);
            }
        })
    }

    updateNumberCart();
</script>