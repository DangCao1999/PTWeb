@model List<Order>
<div class="content_section">
    <h2>
        Your Order History
    </h2>

    <table>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Total Money</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Order order in @Model)
            {
                <tr>
                    <td>
                        @order.Id
                    </td>
                    <td>
                        @order.OrderDate.ToShortDateString()
                    </td>
                    <td>
                        @order.Status
                    </td>
                    <td>
                        @order.Total
                    </td>
                    <td>
                        <form action="/UserInfo/OrderDetail" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="Id" value=@order.Id>
                            <input type="submit" value="Detail">
                        </form>
                        @*<a href=@Url.Action("OrderDetail", "UserInfo")>Detail</a>*@
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>